<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackFondo">

    <ImageView
        android:id="@+id/imagenLogin"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:src="@drawable/tech_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textoLoginEmail"
        android:layout_width="20mm"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/imagenLogin"
        app:layout_constraintTop_toBottomOf="@id/imagenLogin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/email"
        android:textColor="@color/white">
    </TextView>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textoLoginEmail"
        app:layout_constraintTop_toBottomOf="@id/textoLoginEmail"
        android:inputType="text"
        android:backgroundTint="@color/white"
        android:textColor="@color/white">
    </EditText>


    <TextView
        android:id="@+id/userText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/inputEmail"
        app:layout_constraintTop_toBottomOf="@id/inputEmail"
        android:layout_marginLeft="15dp"
        android:text="@string/usuario"
        android:textColor="@color/white">
    </TextView>

    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/userText"
        app:layout_constraintTop_toBottomOf="@id/userText"
        android:inputType="text"
        android:backgroundTint="@color/white"
        android:textColor="@color/white">
    </EditText>

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/userInput"
        app:layout_constraintTop_toBottomOf="@id/userInput"
        android:text="@string/contrasenia"
        android:textColor="@color/white">
    </TextView>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/passwordText"
        app:layout_constraintTop_toBottomOf="@id/passwordText"
        android:inputType="textPassword"
        android:backgroundTint="@color/white"
        android:textColor="@color/white">
    </EditText>

    <Button
        android:id="@+id/textoCrearCuentar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/inputPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        android:text="@string/registrarme"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp">
    </Button>

<ImageView
    android:id="@+id/returnButton"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/return_arrow">
</ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>